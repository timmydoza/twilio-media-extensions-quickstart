{
  "compilerOptions": {
    "composite": true,
    "outDir": "build",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
}
